require "Sunflower/Sunflower"

import("windows")

Sunflower.Start("Test Window",1)

local running = true

function exit()
running = false
end

function paint()
Sunflower.BeginPaint()

Sunflower.DrawPixel(5,5,100)

Sunflower.EndPaint()
end

Sunflower.OnClose("exit")
Sunflower.OnPaint("paint")

while running == true
do
Sunflower.Run()
Sunflower.Proc()
end

Sunflower.Close()
